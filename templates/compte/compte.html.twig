{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block main %}
    {% if app.user %}
        {% for Compte in Comptes %}
            <div class="Compte">
                <h2>{{ Compte.nom }}</h2>
                <p>{{ Compte.solde }}</p>
                <p>{{ Compte.type }}</p>
            </div>
        {% endfor %}
        <a href="{{ path('app_compte_new') }}" class="Compte_button">Cr√©ez un compte bancaire</a>
    {% else %}
        <a href="{{ path('app_login') }}" class="Creation-button">Connectez-Vous!</a>
    {% endif %}
{% endblock %}
